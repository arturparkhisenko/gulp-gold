{
  "extends": [
    "airbnb/base",
    "prettier"
  ],
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "allowImportExportEverywhere": true,
    "ecmaFeatures": {
			"impliedStrict": true,
			"jsx": true
		}
  },
  "rules": {
    "function-paren-newline": 0,
    "quotes": ["warn", "single"]
  }
}
